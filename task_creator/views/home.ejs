<!DOCTYPE html>
<html>
    <head>
        <style>
            .card {
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                transition: 0.3s;
            }
            
            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }
            
            .container {
                padding: 2px 16px;
            }
        </style>
    </head>

    <body>
        <h2>This is a homepage.</h2>
        <ul id="list">
            <% for (let t of tasks) { %>
                <li>
                        <div class="card">
                                <div class="container">
                                  <h4><b><%= t.title %></b></h4> 
                                  <p><%= t.desc %></p> 
                                  <p><%= t.date %></p> 
                                </div>
                        </div>
                </li>
            <% } %>
        </ul>
        <form>
           <a href="/add"><input type="button" value="add element"></a> 
        </form>
        
        
          
    </body>

    

</html>
